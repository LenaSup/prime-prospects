<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.prime_prospects.contrallers.CreateResumeController">

    <top>
    <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER" style="-fx-background-color: red">
        <children>
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308"
                   style="-fx-background-color: red;" text="Prime Prospects"
                   textFill="WHITE" HBox.hgrow="ALWAYS">
                <font>
                    <Font size="24.0" />
                </font>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </Label>
            <Button style="-fx-background-color: red; -fx-border-width: 0;
                -fx-padding: 0; -fx-text-fill: black; -fx-cursor: hand;" text="Log out"
                    onAction="#logOutClick">
                <HBox.margin>
                    <Insets right="5.0"/>
                </HBox.margin>
            </Button>
            <Button style="-fx-background-color: red; -fx-border-width: 0;
                -fx-padding: 0; -fx-text-fill: black; -fx-cursor: hand;" mnemonicParsing="false" text="Вернуться"
                    onAction="#backClick">
                <HBox.margin >
                    <Insets  right="5.0" />
                </HBox.margin>
            </Button>
        </children>
    </HBox>
    </top>




    <center>
        <VBox alignment="CENTER"
              spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
    <Label text="Информация о соискателе" style="-fx-font-size: 24px; -fx-font-weight: bold;">
        <font>
            <Font size="24.0" />
        </font>
    </Label>

    <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="150.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="400.0" />
        </columnConstraints>

        <!-- Position -->
        <Label text="Желаемая должность:" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <style>
                -fx-font-style: italic;
                -fx-font-weight: bold;
            </style>
        </Label>
        <TextField fx:id="positionField" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Введите желаемую должность" />

        <!-- Work Years -->
        <Label text="Опыт работы (лет):" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <style>
                -fx-font-style: italic;
                -fx-font-weight: bold;
            </style>
        </Label>
        <TextField fx:id="workYearsField" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Введите количество лет опыта" />

        <!-- Expected Salary -->
        <Label text="Ожидаемая зарплата:" GridPane.columnIndex="0" GridPane.rowIndex="2">
            <style>
                -fx-font-style: italic;
                -fx-font-weight: bold;
            </style>
        </Label>
        <TextField fx:id="expectedSalaryField" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="Введите желаемую зарплату" />

        <!-- Skills -->
        <Label text="Ключевые навыки:" GridPane.columnIndex="0" GridPane.rowIndex="3">
            <style>
                -fx-font-style: italic;
                -fx-font-weight: bold;
            </style>
        </Label>
        <TextArea fx:id="skillsArea" GridPane.columnIndex="1" GridPane.rowIndex="3" promptText="Введите ключевые навыки (макс. 250 символов)" wrapText="true" prefHeight="80.0"/>

        <!-- About Me -->
        <Label text="О себе:" GridPane.columnIndex="0" GridPane.rowIndex="4">
            <style>
                -fx-font-style: italic;
                -fx-font-weight: bold;
            </style>
        </Label>
        <TextArea fx:id="aboutMeArea" GridPane.columnIndex="1" GridPane.rowIndex="4" promptText="Расскажите о себе (макс. 1000 символов)" wrapText="true" prefHeight="120.0" />

        <!-- Additional Skills -->
        <Label text="Дополнительные навыки:" GridPane.columnIndex="0" GridPane.rowIndex="5">
            <style>
                -fx-font-style: italic;
                -fx-font-weight: bold;
            </style>
        </Label>
        <TextArea fx:id="additionalSkillsArea" GridPane.columnIndex="1" GridPane.rowIndex="5" promptText="Введите дополнительные навыки (макс. 250 символов)" wrapText="true" prefHeight="80.0" />

    </GridPane>

    <Button mnemonicParsing="false" style="-fx-background-color: #1E90FF" text="Сохранить"
    onAction="#save">
        <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
        </padding>
    </Button>
        </VBox>
    </center>

</BorderPane>
