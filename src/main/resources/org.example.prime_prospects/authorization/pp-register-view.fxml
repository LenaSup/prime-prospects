<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      prefHeight="400.0" prefWidth="600.0" fx:controller="org.example.prime_prospects.contrallers.RegisterContraller">
    <children>
        <Label text="Регистрация"/>
        <TextField fx:id="nameField" promptText="Имя"/>
        <TextField fx:id="loginField" promptText="Логин"/>
        <PasswordField fx:id="passwordField" promptText="Пароль"/>
        <CheckBox fx:id="isEmployeeCheckbox" text="Регистрация компании"/>
        <Button fx:id="registerButton" text="Зарегистрироваться" onAction="#handleRegisterButtonAction"/>
        <Label fx:id="messageLabel"/>
    </children>
</VBox>
